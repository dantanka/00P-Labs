using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace zalevskaolya_lab2
{
    public partial class Form1 : Form
    {
        private bool pr; // Логічна змінна для контролю циклу

        public Form1()
        {
            InitializeComponent();
            pr = false; // Початкове значення
        }

        private void button1_Click(object sender, EventArgs e)
        {
            pr = false; // Скидання змінної pr для повторного запуску
            StartCalculations(); // Запуск обчислень
        }

        private void StartCalculations()
        {
            double argx = 1;
            double argy = 1;

            // Нескінченний цикл
            while (true)
            {
                if (pr)
                {
                    return; // Вихід з циклу, якщо pr = true
                }

                argx++;
                argy++;
                if (argx > 10)
                {
                    argx = 1;
                }
                if (argy > 10)
                {
                    argy = 1;
                }

                // Обчислення функцій
                double fx = 2 * Math.Pow((argx - 4), 2) + 4 * (argx - 4) * Math.Sin(argx - 4) + 2 * Math.Pow((Math.Sin(argx - 4)), 2) + 7 * Math.Pow((argy - 7), 2);
                double fy = 2 * Math.Pow((argx - 4), 2) + 4 * (argx - 4) * Math.Sin(argx - 4) + 2 * Math.Pow((Math.Sin(argx - 4)), 2);
                double z = 7 * Math.Pow((argy - 7), 2); // Обчислення Z

                // Оновлення текстових полів на основі вибраних checkBox
                if (checkBox1.Checked)
                {
                    textBox1.Text = fx.ToString();
                }
                if (checkBox2.Checked)
                {
                    textBox2.Text = fy.ToString();
                }
                if (checkBox3.Checked)
                {
                    textBox3.Text = z.ToString();
                }

                Application.DoEvents(); // Дозволяє оновлення інтерфейсу
            }
        }

        private void button2_Click(object sender, EventArgs e)
        {
            pr = true; // Встановлює pr в true для зупинки циклу
        }

        private void checkBox3_CheckedChanged(object sender, EventArgs e)
        {

        }
    }
}
