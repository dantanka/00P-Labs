using System;
using System.Windows.Forms;

namespace lab3
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            MyClass class1 = new MyClass();

            // Зчитування значень з текстових полів
            double xValue = Convert.ToDouble(textBox1.Text);
            double yValue = Convert.ToDouble(textBox2.Text);

            // Присвоєння значень полям екземпляра
            class1.x = xValue;
            class1.y = yValue;

            // Обчислення результату для екземпляра
            double result = class1.f();
            textBox3.Text = result.ToString(); // Виведення результату в textBox3

            double resultWithParams = class1.f(xValue, yValue);
            textBox4.Text = resultWithParams.ToString(); // Виведення результату в textBox4

            // Присвоєння значень статичним полям
            MyClass.xs = xValue;
            MyClass.ys = yValue;

            // Обчислення результатів для статичних полів
            double resultStatic = MyClass.fs();
            textBox5.Text = resultStatic.ToString(); // Виведення результату в textBox5

            double resultStaticWithParams = MyClass.fs(xValue, yValue);
            textBox6.Text = resultStaticWithParams.ToString(); // Виведення результату в textBox6


        }

        public class MyClass
        {
            // Публічні властивості x і y
            public double x { get; set; }
            public double y { get; set; }

            // Статичні поля xs і ys
            public static double xs = 10;
            public static double ys = 10;

            // Конструктор за замовчуванням
            public MyClass() { }

            // Перевантажений конструктор
            public MyClass(double x, double y)
            {
                this.x = x;
                this.y = y;
            }

            // Метод для обчислень з використанням екземплярних полів
            public virtual double f()
            {
                return 1 * Math.Pow(x - 1, 2) + 1 * (x - 1) * Math.Sin(x - 1) +
                       1 * Math.Pow(Math.Sin(x - 1), 2) + 3 * Math.Pow(y - 0, 2);
            }

            // Статичний метод для обчислень з використанням статичних полів
            public static double fs()
            {
                return 1 * Math.Pow(xs - 1, 2) + 1 * (xs - 1) * Math.Sin(xs - 1) +
                       1 * Math.Pow(Math.Sin(xs - 1), 2) + 3 * Math.Pow(ys - 0, 2);
            }

            // Метод для обчислень з параметрами
            public virtual double f(double x, double y)
            {
                return 1 * Math.Pow(x - 1, 2) + 1 * (x - 1) * Math.Sin(x - 1) +
                       1 * Math.Pow(Math.Sin(x - 1), 2) + 3 * Math.Pow(y - 0, 2);
            }

            // Статичний метод для обчислень з параметрами
            public static double fs(double xs, double ys)
            {
                return 1 * Math.Pow(xs - 1, 2) + 1 * (xs - 1) * Math.Sin(xs - 1) +
                       1 * Math.Pow(Math.Sin(xs - 1), 2) + 3 * Math.Pow(ys - 0, 2);
            }
        }
    }
}
